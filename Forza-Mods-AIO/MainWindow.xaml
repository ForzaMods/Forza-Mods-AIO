<mah:MetroWindow x:Class="Forza_Mods_AIO.MainWindow"
        x:Name="Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Height="450" Width="800"
        MinHeight="450" MinWidth="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        Closing="Window_Closing"
        ShowTitleBar="False" ShowCloseButton="False" BorderThickness="0"
        WindowTransitionsEnabled="False">
    <Border x:Name="Background" Background="#111111"
            CornerRadius="20">
        <Grid x:Name="grid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftColumn" Width="200" MaxWidth="200"/>
                <ColumnDefinition x:Name="MainColumn" Width="600" MaxWidth="600" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition x:Name="TopRow" Height="36" MaxHeight="50"/>
                <RowDefinition Height="14"/>
                <RowDefinition x:Name="MainRow"/>
            </Grid.RowDefinitions>

            <Border x:Name="SideBar" Grid.RowSpan="2" Grid.Row="1" Grid.Column="0" CornerRadius="20"/>
            <Border x:Name="TopBar1" Grid.RowSpan="2" Grid.ColumnSpan="2" CornerRadius="20"/>
            <Border x:Name="TopBar2" Grid.Row="1" Grid.ColumnSpan="2"/>

            <TextBlock Text="Forza Mods AIO"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Foreground="White"
                   FontSize="16"
                   Margin="20,15,0,0" FontFamily="Manrope" Height="20"/>

            <StackPanel x:Name="ButtonStack" Grid.Row="2" >
                <RadioButton x:Name="AIO_Info"
                             Content="AIO Info"
                             Height="40"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}" Click="CategoryButton_Click" FontFamily="Manrope" Focusable="False"/>
                <RadioButton x:Name="AutoShow"
                             Content="Autoshow/garage"
                             Height="40"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}" Click="CategoryButton_Click" FontFamily="Manrope" Focusable="False"/>
                <RadioButton x:Name="Self_Vehicle"
                             Content="Self/Vehicle"
                             Height="40"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}" Click="CategoryButton_Click" FontFamily="Manrope" Focusable="False"/>
                <RadioButton Content="Saveswapper"
                             Height="40"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}" Click="CategoryButton_Click" FontFamily="Manrope" Focusable="False"/>
            </StackPanel>
            <Border x:Name="FrameBorder" Grid.Row="3" Grid.Column="1" CornerRadius="0,0,20,0" Background="#111111"/>
            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=FrameBorder}" />
                </Grid.OpacityMask>
                <Frame x:Name="AIO_InfoFrame" Grid.Column="1" Grid.Row="2" Content="Frame" Source="/Tabs/AIO-Info/AIO-Info.xaml" Visibility="Visible" Focusable="False" IsTabStop="False"/>
                <Frame x:Name="AutoShowFrame" Grid.Column="1" Grid.Row="2" Content="Frame" Source="/Tabs/AutoShowTab/AutoShow.xaml" Visibility="Hidden" IsTabStop="False"/>
                <Frame x:Name="Self_VehicleFrame" Grid.Column="1" Grid.Row="2" Content="Frame" Source="/Tabs/Self-Vehicle/Self-Vehicle.xaml" Visibility="Hidden" IsTabStop="False"/>
            </Grid>
            <Label x:Name="AttachedLabel" Content="Launch FH4/5" HorizontalAlignment="Left" Margin="0,13,0,0" VerticalAlignment="Top" FontFamily="Manrope" Foreground="White" FontSize="10" Height="20" Grid.Column="1"/>
