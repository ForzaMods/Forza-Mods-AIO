<Page x:Class="Forza_Mods_AIO.Tabs.Self_Vehicle.DropDownTabs.MiscellaneousPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mah='http://metro.mahapps.com/winfx/xaml/controls'
      mc:Ignorable="d"
      d:DesignHeight="70" 
      d:DesignWidth="580"
      Title="MiscellaneousPage"
      Background="Transparent">
    <Grid>
        <Border BorderBrush="#FF2E3440" 
                BorderThickness="2,0,2,2"
                CornerRadius="0,0,10,10" />
        
        <Border BorderThickness="2,2,2,2" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="272.5" 
                Height="46" 
                Margin="10,10,0,0" 
                BorderBrush="#FF2E3440" />
        
        <Border BorderThickness="2,2,2,2" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Width="272.5" 
                Height="46" 
                Margin="0,10,10,0" 
                BorderBrush="#FF2E3440" />

        <mah:ToggleSwitch x:Name="RemoveBuildCapSwitch"
                          MinWidth="1"
                          Content=""
                          VerticalAlignment="Top"
                          Margin="20 17 0 0"
                          Toggled="RemoveBuildCapSwitch_OnToggled"/> 
        
        <Label Content="Event Builder Unlimited Build Budget"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Margin="70 20 0 0"/>
        
        <mah:ToggleSwitch x:Name="UnbreakableSkillScoreSwitch"
                          MinWidth="1"
                          Content=""
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          Margin="0 17 217.5 0"
                          Toggled="UnbreakableSkillScoreSwitch_OnToggled"/> 
        
        <Label Content="Unbreakable Skill Score/Skill Combo"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Margin="365 20 0 0"/>
    </Grid>
</Page>
