<Page x:Class="Forza_Mods_AIO.Tabs.Self_Vehicle.DropDownTabs.BackFirePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d"
      Title="BackFirePage"
      d:DesignHeight="125" 
      d:DesignWidth="580"
      Background="Transparent">
    <Grid>
        
        <Border BorderBrush="#FF2E3440" 
                BorderThickness="2,0,2,2" 
                CornerRadius="0,0,10,10" />

        <Border BorderThickness="2,2,2,2" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                Width="556" 
                Height="46"
                Margin="0,10,0,0" 
                BorderBrush="#FF2E3440">

            <StackPanel Orientation="Horizontal">
                
                <mah:NumericUpDown x:Name="MinTime" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="10 0 0 0"
                                   Width="100"
                                   Minimum="0"
                                   Value="1000"
                                   BorderThickness="0"
                                   Background="#FF2E3440"
                                   TextAlignment="Left"
                                   ValueChanged="TimeNumerics_OnValueChanged"/>
                
                <TextBlock Text="Minimum Time"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="10 0 0 0"
                           Foreground="White"
                           FontSize="12"/>
                
                <mah:NumericUpDown x:Name="MaxTime" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="10 0 0 0"
                                   Width="100"
                                   Minimum="0"
                                   Value="2500"
                                   BorderThickness="0"
                                   Background="#FF2E3440"
                                   TextAlignment="Left"
                                   ValueChanged="TimeNumerics_OnValueChanged"/>
                
                <TextBlock Text="Maximum Time"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="10 0 0 0"
                           Foreground="White"
                           FontSize="12"/>
                
                <mah:ToggleSwitch x:Name="BackfireToggle" 
                                  FontSize="12"
                                  Content="Backfire Time"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Margin="10 0 0 0"
                                  Toggled="BackfireToggle_OnToggled"/>
                
            </StackPanel>
        
        </Border>

        
        
        <Border BorderThickness="2,2,2,2" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                Width="556" 
                Height="46"
                Margin="0,66,0,0" 
                BorderBrush="#FF2E3440">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                
                <mah:ToggleSwitch x:Name="ForceAntiLag" 
                                  FontSize="12"
                                  Content="Force Anti-Lag Style Backfire"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  Toggled="ForceBackfireType_OnToggled"/>

                <mah:ToggleSwitch x:Name="ForceNormal" 
                                  FontSize="12"
                                  Content="Force Normal Style Backfire"
                                  Margin="15 0 0 0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  Toggled="ForceBackfireType_OnToggled"/>

            </StackPanel>
        
        </Border>
        
    </Grid>
</Page>
