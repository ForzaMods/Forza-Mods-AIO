<Page x:Class="Forza_Mods_AIO.Tabs.Self_Vehicle.DropDownTabs.TeleportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="580"
      Title="Teleports">

    <Border BorderBrush="#FF2E3440" BorderThickness="2,0,2,2" CornerRadius="0,0,10,10">
        <Grid>
            <ComboBox x:Name="TeleportBox" SelectionChanged="TeleportBox_SelectionChanged" Height="25" Width="180" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="15"/>

            <mah:ToggleSwitch x:Name="AutoTpToWaypoint" FontSize="14" Toggled="AutoTpToWaypoint_Toggled" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15" Content="Auto teleport to waypoint"/>
            <mah:ToggleSwitch x:Name="BypassOutOfBounds" FontSize="14" Toggled="BypassOutOfBounds_Toggled" VerticalAlignment="Top" Margin="15,52,0,0" Content="Bypass out of bounds TP"/>
        </Grid>
    </Border>
</Page>
