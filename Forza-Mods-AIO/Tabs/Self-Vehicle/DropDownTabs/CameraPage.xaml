<Page x:Class="Forza_Mods_AIO.Tabs.Self_Vehicle.DropDownTabs.CameraPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      d:DesignHeight="275" d:DesignWidth="580"
      Title="CameraPage">

    <Grid>
        <Border BorderBrush="#FF2E3440" BorderThickness="2,0,2,2" CornerRadius="0,0,10,10"/>

        <!--#region Main Part-->
        <Label Content="Focus" FontSize="15" Height="30" HorizontalAlignment="Left" Margin="50,10,480,235"/>
        <mah:NumericUpDown BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="FocusBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,40,0,0" Minimum="-0" ValueChanged="FocusBox_ValueChanged"/>
        <Label Content="Exposure" FontSize="15" Height="30" HorizontalAlignment="Center" Margin="0,10,0,235"/>
        <mah:NumericUpDown BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="ExposureBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" Minimum="-0" ValueChanged="ExposureBox_ValueChanged"/>
        <Label Content="Aperture" FontSize="15" Height="30" HorizontalAlignment="Left" Margin="41,66,0,179"/>
        <mah:NumericUpDown BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="ApertureBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,95,0,0" Minimum="-0" ValueChanged="ApertureBox_ValueChanged"/>
        <Label Content="Contrast" FontSize="15" Height="30" HorizontalAlignment="Left" Margin="41,122,0,123"/>
        <mah:NumericUpDown BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="ContrastBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,152,0,0" Minimum="-0" ValueChanged="ContrastBox_ValueChanged"/>
        <Label Content="Colour" FontSize="15" Height="30" HorizontalAlignment="Left" Margin="478,10,0,235"/>
        <mah:NumericUpDown BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="ColourBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15,40,15,0" Minimum="-0" ValueChanged="ColourBox_ValueChanged"/>
        <Label Content="Brightness" FontSize="15" Height="30" HorizontalAlignment="Left" Margin="252,122,0,123"/>
        <mah:NumericUpDown BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="BrightnessBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,152,0,0" Minimum="-0" ValueChanged="BrightnessBox_ValueChanged"/>
        <Label Content="Sepia" FontSize="15" Height="30" HorizontalAlignment="Center" Margin="0,66,0,179"/>
        <mah:NumericUpDown BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="SepiaBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,95,0,0" Minimum="-0" ValueChanged="SepiaBox_ValueChanged"/>
        <Label Content="Vignette" FontSize="15" Height="30" HorizontalAlignment="Left" Margin="472,66,0,179"/>
        <mah:NumericUpDown BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="VignetteBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,95,15,0" Minimum="-0" ValueChanged="VignetteBox_ValueChanged"/>
        <Label Content="Temperature" FontSize="15" Height="30" HorizontalAlignment="Left" Margin="458,122,0,123"/>
        <mah:NumericUpDown BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="TemperatureBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,152,15,0" Minimum="-0" ValueChanged="TemperatureBox_ValueChanged"/>
        <!--#endregion-->
        <!--#region Bottom part / Footer-->
        <Label Content="No Clip" 
               FontSize="16"
               VerticalAlignment="Bottom" HorizontalAlignment="Left"
               Margin="20, 50"/>

        <mah:ToggleSwitch x:Name="NoClip"
                          VerticalAlignment="Bottom" HorizontalAlignment="Left"
                          Margin="15"
                          Toggled="NoClip_Toggled"/>

        <Label Content="Zoom Unlocker" 
               FontSize="16"
               VerticalAlignment="Bottom" HorizontalAlignment="Left"
               Margin="156,0,0,50"/>

        <mah:ToggleSwitch x:Name="ZoomUnlocker"
                          VerticalAlignment="Bottom" HorizontalAlignment="Left"
                          Margin="175, 15"
                          Toggled="ZoomUnlocker_Toggled"/>

        <Label Content="Speed Boost" 
               FontSize="16"
               VerticalAlignment="Bottom" HorizontalAlignment="Right"
               Margin="0,0,10,50"/>

        <Slider x:Name="SpeedSlider"
            HorizontalAlignment="Right" VerticalAlignment="Bottom"
            Width="86" Margin="15, 17.5"
            Maximum="100"
            SmallChange="1" LargeChange="10" Minimum="0"  Value="100" 
            Foreground="#FF2E3440" Focusable="False"/>

        <Label Content="Samples Multiplier" 
               FontSize="16"
               VerticalAlignment="Bottom" HorizontalAlignment="Right"
               Margin="0,0,134,50"/>

        <Slider x:Name="SamplesMultiplierSlider"
            HorizontalAlignment="Right" VerticalAlignment="Bottom"
            Width="86" Margin="0,0,164,18"
            Maximum="100"
            SmallChange="1" LargeChange="10" Minimum="0"  Value="100" 
            Foreground="#FF2E3440" Focusable="False"/>
        <!--#endregion-->
    </Grid>
</Page>
