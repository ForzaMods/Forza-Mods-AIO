                                VerticalAlignment="Center"
                                Grid.Column="1"
                                Margin="7.5 0"
                                KeyDown="KeybindingButton_OnKeyDown"
                                Background="#FF2E3440"
                                BorderBrush="#FF2E3440"/>
                    </Grid>

                    <Grid Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
