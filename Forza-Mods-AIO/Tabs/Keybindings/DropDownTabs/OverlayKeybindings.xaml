                        HorizontalAlignment="Left"
                        Margin="170 7.5"
                        Width="85"
                        Click="KBButton_OnClick"
                        Height="25"
                        Background="#FF2E3440"
                        BorderBrush="#FF2E3440"/>
                
                <Label Content="Controller Up Keybind"
                       Margin="285 7.5 0 0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"/>
                
                <Button x:Name="ControllerUpButton"
                        HorizontalAlignment="Right"
                        Margin="7.5 7.5"
                        Width="85"
                        
