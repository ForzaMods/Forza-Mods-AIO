<Page x:Class="Forza_Mods_AIO.Tabs.Tuning.DropDownTabs.Tires"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      d:DesignHeight="240" 
      d:DesignWidth="580"
      Title="Tires"
      Background="Transparent">

    <Grid>
        <Border BorderBrush="#FF2E3440" BorderThickness="2,0,2,2" CornerRadius="0,0,10,10"/>

        <StackPanel>
            
            <Border BorderThickness="2,2,2,2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="556" Height="46" BorderBrush="#FF2E3440" Margin="0,10,0,0">
                
                <Grid>
                    
                    
                    <Label Content="Front Left Tire Pressure" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center" 
                           Margin="5,0,0,0"/>
                    
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                    
                        <ComboBox x:Name="TireFrontLeftUnitBox"
                                  SelectedIndex="0"
                                  Height="25"
                                  Width="100"
                                  BorderBrush="#FF2E3440"
                                  Background="#FF2E3440"
                                  Focusable="False"
                                  SelectionChanged="SelectionChanged">
                            <ComboBoxItem Background="{x:Null}" Content="PSI" Focusable="False"/>
                            <ComboBoxItem Background="{x:Null}" Content="Bar" Focusable="False"/>
                        </ComboBox>

                        <mah:NumericUpDown x:Name="TireFrontLeftBox" 
                                           Background="#FF2E3440" 
                                           BorderThickness="0" 
                                           TrackMouseWheelWhenMouseOver="True" 
                                           ParsingNumberStyle="Float" 
                                           TextAlignment="Left" 
                                           NumericInputMode="Decimal" 
                                           Height="25" 
                                           Width="280" 
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Top"
                                           Margin="10,0,10,0" 
                                           ValueChanged="ValueChanged"/>

                    </StackPanel>

                </Grid>
                
            </Border>            
            
            <Border BorderThickness="2,2,2,2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="556" Height="46" BorderBrush="#FF2E3440" Margin="0,10,0,0">
                
                <Grid>
                    
                    <Label Content="Front Right Tire Pressure" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center" 
                           Margin="5,0,0,0"/>

                    
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                    
                        <ComboBox x:Name="TireFrontRightUnitBox"
                                  SelectedIndex="0"
                                  Height="25"
                                  Width="100"
                                  BorderBrush="#FF2E3440"
                                  Background="#FF2E3440" 
                                  Focusable="False"
                                  SelectionChanged="SelectionChanged">
                            <ComboBoxItem Background="{x:Null}" Content="PSI" Focusable="False"/>
                            <ComboBoxItem Background="{x:Null}" Content="Bar" Focusable="False"/>
                        </ComboBox>

                    
                        <mah:NumericUpDown x:Name="TireFrontRightBox" 
                                           Background="#FF2E3440" 
                                           BorderThickness="0" 
                                           TrackMouseWheelWhenMouseOver="True" 
                                           ParsingNumberStyle="Float" 
                                           TextAlignment="Left" 
                                           NumericInputMode="Decimal" 
                                           Height="25" 
                                           Width="280" 
                                           HorizontalAlignment="Right" 
                                           VerticalAlignment="Top" 
                                           Margin="10,0,10,0"
                                           ValueChanged="ValueChanged"/>

                    </StackPanel>

                    
                </Grid>
                
            </Border>
            
                        
            <Border BorderThickness="2,2,2,2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="556" Height="46" BorderBrush="#FF2E3440" Margin="0,10,0,0">
                
                <Grid>
                    
                    <Label Content="Rear Left Tire Pressure" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center" 
                           Margin="5,0,0,0"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                    

                        <ComboBox x:Name="TireRearLeftUnitBox"
                                  SelectedIndex="0"
                                  Height="25"
                                  Width="100"
                                  BorderBrush="#FF2E3440"
                                  Background="#FF2E3440" 
                                  Focusable="False"
                                  SelectionChanged="SelectionChanged">
                            <ComboBoxItem Background="{x:Null}" Content="PSI" Focusable="False"/>
                            <ComboBoxItem Background="{x:Null}" Content="Bar" Focusable="False"/>
                        </ComboBox>
                    
                        <mah:NumericUpDown x:Name="TireRearLeftBox" 
                                           Background="#FF2E3440" 
                                           BorderThickness="0" 
                                           TrackMouseWheelWhenMouseOver="True" 
                                           ParsingNumberStyle="Float"  
                                           TextAlignment="Left" 
                                           NumericInputMode="Decimal" 
                                           Height="25" 
                                           Width="280" 
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Bottom" 
                                           Margin="10,0,10,0" 
                                           ValueChanged="ValueChanged"/>

                    </StackPanel>
                    
                </Grid>
                
                
            </Border>   
            
            <Border BorderThickness="2,2,2,2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="556" Height="46" BorderBrush="#FF2E3440" Margin="0,10,0,0">
                
                <Grid>
                    
                    <Label Content="Rear Right Tire Pressure" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                    
                        <ComboBox x:Name="TireRearRightUnitBox"
                                  SelectedIndex="0"
                                  Height="25"
                                  Width="100"
                                  BorderBrush="#FF2E3440"
                                  Background="#FF2E3440"
                                  Focusable="False"
                                  SelectionChanged="SelectionChanged">
                            <ComboBoxItem Background="{x:Null}" Content="PSI" Focusable="False"/>
                            <ComboBoxItem Background="{x:Null}" Content="Bar" Focusable="False"/>
                        </ComboBox>
                    
                        <mah:NumericUpDown x:Name="TireRearRightBox" 
                                           Background="#FF2E3440" 
                                           BorderThickness="0" 
                                           TrackMouseWheelWhenMouseOver="True" 
                                           ParsingNumberStyle="Float" 
                                           TextAlignment="Left" 
                                           NumericInputMode="Decimal" 
                                           Height="25" Width="280" 
                                           HorizontalAlignment="Right" 
                                           VerticalAlignment="Bottom" 
                                           Margin="10,0,10,0" 
                                           Minimum="0" 
                                           ValueChanged="ValueChanged"/>
                    
                    </StackPanel>
                </Grid>
                
            </Border>
        </StackPanel>

        
    </Grid>
</Page>
