<Page x:Class="Forza_Mods_AIO.Tabs.TuningTablePort.DropDownTabs.Steering"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      d:DesignHeight="395" d:DesignWidth="580"
      Title="Steering">

    <Border BorderBrush="#FF2E3440" BorderThickness="2,0,2,2" CornerRadius="0,0,10,10">
        <Grid Height="430" Margin="0, -35, 0,0">
            <!--#region Labels-->
            <!--#region Angle-->
            <Label x:Name="SteeringAnglePartLabel"
               Content="Steering Angle Part"
               VerticalAlignment="Top" HorizontalAlignment="Center"
               FontSize="13" FontWeight="Bold"
               Margin="0,45,0,0"/>
            <Label x:Name="SteeringAngleMaxLabel"
               Content="Steering Angle Max"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               FontSize="13"
               Margin="55,85,0,0"/>
            <Label x:Name="SteeringAngleMax2Label"
               Content="Steering Angle Max 2"
               VerticalAlignment="Top" HorizontalAlignment="Right"
               FontSize="13"
               Margin="0,85,49,0"/>
            <!--#endregion-->
            <!--#region Velocity-->
            <Label x:Name="VelocityPartLabel"
               Content="Velocity Part"
               VerticalAlignment="Top" HorizontalAlignment="Center"
               FontSize="13" FontWeight="Bold"
               Margin="0,155,0,0"/>
            <Label x:Name="TimeLabel"
               Content="Steering Angle Time to Max Steering"
               VerticalAlignment="Top" HorizontalAlignment="Center"
               FontSize="13" Margin="0,187,0,0"/>
            <Label x:Name="StraightLabel"
               Content="Velocity Straight"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               FontSize="13"
               Margin="68,250,0,0" RenderTransformOrigin="0.817,0.623"/>
            <Label x:Name="TurningLabel"
               Content="Velocity Turning"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               FontSize="13"
               Margin="68,343,0,0"/>
            <Label x:Name="CountersteerLabel"
               Content="Velocity Countersteer"
               VerticalAlignment="Top" HorizontalAlignment="Right"
               FontSize="13"
               Margin="0,250,45,0"/>
            <Label x:Name="DynamicPeekLabel"
               Content="Velocity Dynamic Peak"
               VerticalAlignment="Top" HorizontalAlignment="Right"
               FontSize="13"
               Margin="0,343,41,0"/>
            <!--#endregion-->
            <!--#endregion-->
            <!--#region Numeric Boxes-->
            <!--Steering Boxes-->
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="AngleBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="45,117,395,287" ValueChanged="AngleBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="Angle2Box" TextAlignment="Left" NumericInputMode="Decimal" Margin="395,117,45,287" ValueChanged="Angle2Box_ValueChanged"/>
            <!--Velocity Boxes-->
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="VelocityTimeBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="220,222,220,182" ValueChanged="VelocityTimeBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="VelocityStraightBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="50,287,390,117" ValueChanged="VelocityStraightBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="VelocityTurningBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="50,375,391,29" ValueChanged="VelocityTurningBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="VelocityCountersteerBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="399,287,41,117" ValueChanged="VelocityCountersteerBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="VelocityDynamicPeekBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="399,374,41,30" ValueChanged="VelocityDynamicPeekBox_ValueChanged"/>
            <!--#endregion-->
        </Grid>
    </Border>
</Page>
