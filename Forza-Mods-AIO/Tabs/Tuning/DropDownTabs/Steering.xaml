<Page x:Class="Forza_Mods_AIO.Tabs.TuningTablePort.DropDownTabs.Steering"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      d:DesignHeight="275" d:DesignWidth="580"
      Title="Steering">

    <Border BorderBrush="#FF2E3440" BorderThickness="2,0,2,2" CornerRadius="0,0,10,10">
        <Grid>
            <Border BorderThickness="2,2,2,2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="556" Height="50" BorderBrush="#FF2E3440" Margin="0,10,0,0" />
            <Border BorderThickness="2,2,2,2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="556" Height="187" Margin="0,75,0,0" BorderBrush="#FF2E3440" />

            <!--#region Labels-->
            <!--#region Angle-->
            <Label x:Name="SteeringAngleMaxLabel"
               Content="Steering Angle Max"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               
               Margin="18,22,0,0"/>
            <Label x:Name="SteeringAngleMax2Label"
               Content="Steering Angle Max 2"
               VerticalAlignment="Top" HorizontalAlignment="Right"
               
               Margin="0,22,163,0"/>
            <!--#endregion-->
            <!--#region Velocity-->
            <Label x:Name="TimeLabel"
               Content="Steering Angle Time to Max Steering"
               VerticalAlignment="Top" HorizontalAlignment="Left" Margin="18,225,0,0"/>
            <Label x:Name="StraightLabel"
               Content="Velocity Straight"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               
               Margin="18,88,0,0" RenderTransformOrigin="0.817,0.623"/>
            <Label x:Name="TurningLabel"
               Content="Velocity Turning"
               VerticalAlignment="Top" Margin="18,122,0,0" HorizontalAlignment="Left"
               />
            <Label x:Name="CountersteerLabel"
               Content="Velocity Countersteer"
               VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,157,435,0"
               />
            <Label x:Name="DynamicPeekLabel"
               Content="Velocity Dynamic Peak"
               VerticalAlignment="Top" HorizontalAlignment="Right"
               
               Margin="0,192,430,0"/>
            <!--#endregion-->
            <!--#endregion-->
            <!--#region Numeric Boxes-->
            <!--Steering Boxes-->
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="AngleBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="144,22,296,225" ValueChanged="AngleBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="Angle2Box" TextAlignment="Left" NumericInputMode="Decimal" Margin="422,22,18,225" ValueChanged="Angle2Box_ValueChanged"/>
            <!--Velocity Boxes-->
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="VelocityTimeBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="227,226,168,21" ValueChanged="VelocityTimeBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="VelocityStraightBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="152,88,168,159" ValueChanged="VelocityStraightBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="VelocityTurningBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="153,122,168,125" ValueChanged="VelocityTurningBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="VelocityCountersteerBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="153,156,168,91" ValueChanged="VelocityCountersteerBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="VelocityDynamicPeekBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="153,192,168,55" ValueChanged="VelocityDynamicPeekBox_ValueChanged"/>
            <!--#endregion-->
            <mah:ToggleSwitch Toggled="FreezeToggled" FontSize="12" x:Name="VelocityCountersteerFreeze" Margin="422,154,0,0" VerticalAlignment="Top" Content="Freeze value" Width="100"/>
            <mah:ToggleSwitch Toggled="FreezeToggled" FontSize="12" x:Name="VelocityStraightFreeze" Margin="422,85,0,0" VerticalAlignment="Top" Content="Freeze value" Width="100"/>
            <mah:ToggleSwitch Toggled="FreezeToggled" FontSize="12" x:Name="VelocityTurningFreeze" Margin="422,0,0,0" Content="Freeze value" Width="100"/>
            <mah:ToggleSwitch Toggled="FreezeToggled" FontSize="12" x:Name="VelocityDynamicPeekFreeze" Margin="422,189,0,0" VerticalAlignment="Top" Content="Freeze value" Width="100"/>
            <mah:ToggleSwitch Toggled="FreezeToggled" FontSize="12" x:Name="TimeToMaxSteeringFreeze" Margin="422,224,0,0" VerticalAlignment="Top" Content="Freeze value" Width="100"/>
        </Grid>
    </Border>
</Page>
