<Page x:Class="Forza_Mods_AIO.Tabs.TuningTablePort.DropDownTabs.Springs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      d:DesignHeight="525" d:DesignWidth="580"
      Title="Springs">

    <Border BorderBrush="#FF2E3440" BorderThickness="2,0,2,2" CornerRadius="0,0,10,10">
        <Grid Margin="0, -35, 0, 0">
            <!--#region Labels-->
            <!--#region Wheelbase-->
            <Label x:Name="SpringsPartLabel"
               Content="Springs Part"
               VerticalAlignment="Top" HorizontalAlignment="Center"
               FontSize="13" FontWeight="Bold"
               Margin="0,45,0,0"/>
            <Label x:Name="FrontSpringsMinLabel"
               Content="Front Springs Min"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               FontSize="13"
               Margin="61,88,0,0"/>
            <Label x:Name="RearSpringsMinLabel"
               Content="Rear Springs Min"
               VerticalAlignment="Top" HorizontalAlignment="Right"
               FontSize="13"
               Margin="0,88,61,0"/>
            <Label x:Name="FrontSpringsMaxLabel"
               Content="Front Springs Max"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               FontSize="13"
               Margin="60,158,0,0"/>
            <Label x:Name="RearSpringsMaxLabel"
               Content="Rear Springs Max"
               VerticalAlignment="Top" HorizontalAlignment="Right"
               FontSize="13"
               Margin="0,158,57,0"/>
            <!--#endregion-->
            <!--#region Rims-->
            <Label x:Name="RideHeightPartLabel"
               Content="Ride Height Part"
               VerticalAlignment="Top" HorizontalAlignment="Center"
               FontSize="13" FontWeight="Bold"
               Margin="0,265,0,0"/>
            <Label x:Name="FrontRideHeightMinLabel"
               Content="Front Ride Height Min"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               FontSize="13"
               Margin="46,318,0,0"/>
            <Label x:Name="FrontRideHeightMaxLabel"
               Content="Front Ride Height Max"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               FontSize="13"
               Margin="45,440,0,0"/>
            <Label x:Name="RearRideHeightMinLabel"
               Content="Rear Ride Height Min"
               VerticalAlignment="Top" HorizontalAlignment="Right"
               FontSize="13"
               Margin="0,318,46,0"/>
            <Label x:Name="RearRideHeightMaxLabel"
               Content="Rear Ride Height Max"
               VerticalAlignment="Top" HorizontalAlignment="Right"
               FontSize="13"
               Margin="0,440,44,0"/>
            <!--#endregion-->
            <!--#endregion-->
            <!--#region Numeric Boxes, Buttons-->
            <!--Springs Boxes-->
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" Height="25" StringFormat="0.00000000" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="FrontSpringsMinBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="45,120,395,412" ValueChanged="FrontSpringsMinBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" Height="25" StringFormat="0.00000000" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="RearSpringsMinBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="394,120,46,412" ValueChanged="RearSpringsMinBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" Height="25" StringFormat="0.00000000" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="FrontSpringsMaxBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="45,190,395,342" ValueChanged="FrontSpringsMaxBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" Height="25" StringFormat="0.00000000" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="RearSpringsMaxBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="395,190,45,342" ValueChanged="RearSpringsMaxBox_ValueChanged"/>
            <!--Ride Height Boxes, Buttons-->
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" Height="25" StringFormat="0.00000000" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="FrontRideHeightMinBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="45,351,395,181" ValueChanged="FrontRideHeightMinBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" Height="25" StringFormat="0.00000000" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="FrontRideHeightMaxBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="45,472,395,60" ValueChanged="FrontRideHeightMaxBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" Height="25" StringFormat="0.00000000" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="RearRideHeightMinBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="396,351,44,181" ValueChanged="RearRideHeightMinBox_ValueChanged"/>
            <mah:NumericUpDown Background="#FF2E3440" BorderThickness="0" Height="25" StringFormat="0.00000000"  TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="RearRideHeightMaxBox" TextAlignment="Left" NumericInputMode="Decimal" Margin="396,472,44,60" ValueChanged="RearRideHeightMaxBox_ValueChanged"/>
            <mah:ToggleSwitch x:Name="FrontRestriction" Content="Front Restriction" Height="30" Margin="45,391,0,0" VerticalAlignment="Top" FontSize="12" Toggled="FrontRestriction_Toggled" ToolTip="For stance/fix bouncing"/>
            <mah:ToggleSwitch x:Name="RearRestriction" Content="Rear Restriction" Height="30" Margin="395,390,0,0" VerticalAlignment="Top" FontSize="12" Toggled="RearRestriction_Toggled" ToolTip="For stance/fix bouncing"/>
        </Grid>
    </Border>
</Page>
