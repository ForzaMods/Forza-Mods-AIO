<Page x:Class="Forza_Mods_AIO.Views.SubPages.SelfVehicle.Customization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:local="clr-namespace:Forza_Mods_AIO.Views.SubPages.SelfVehicle"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance local:Customization, IsDesignTimeCreatable=true}"
      Title="Customization" 
      d:DesignHeight="Auto"
      d:DesignWidth="Auto">
    <StackPanel>
        
        <Border Style="{StaticResource CommonBorderStyle}">
            <Grid Margin="5 0">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Slider Grid.Column="0"
                        VerticalAlignment="Center"
                        mah:SliderHelper.EnableMouseWheel="MouseHover"
                        AutoToolTipPlacement="{StaticResource SliderAutoToolTipPlacement}"
                        AutoToolTipPrecision="{StaticResource SliderTooltipPrecision}"
                        Value="{Binding ViewModel.GlowingPaintValue}"
                        IsEnabled="{Binding ViewModel.ArePaintUiElementsEnabled}"
                        ValueChanged="PaintSlider_OnValueChanged"/>
                
                <mah:ToggleSwitch Grid.Column="1" 
                                  VerticalAlignment="Center"
                                  Margin="5 0 0 0"
                                  MinWidth="0"
                                  FontSize="12"
                                  Content="{DynamicResource GlowingPaint}"
                                  IsEnabled="{Binding ViewModel.ArePaintUiElementsEnabled}"
                                  Toggled="PaintSwitch_OnToggled"/>
                
            </Grid>
        </Border>
        
        <Border Style="{StaticResource CommonBorderStyle}">
            <Grid Margin="5 0">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <mah:ColorPicker x:Name="ColorPicker" 
                                 Grid.Column="0"
                                 Background="{DynamicResource MahApps.Brushes.AccentBase}"
                                 BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                                 VerticalAlignment="Center"
                                 SelectedColor="Red"
                                 IsAvailableColorPaletteVisible="True"
                                 SelectedColorChanged="ColorPickerBase_OnSelectedColorChanged"
                                 IsEnabled="{Binding ViewModel.AreHeadlightUiElementsEnabled}"
                                 mah:ControlsHelper.CornerRadius="{StaticResource ControlCornerRadius}"/>
                
                <mah:ToggleSwitch Grid.Column="1" 
                                  VerticalAlignment="Center"
                                  Margin="5 0 0 0"
                                  MinWidth="0"
                                  FontSize="12"
                                  Content="{DynamicResource HeadlightColour}"
                                  IsEnabled="{Binding ViewModel.AreHeadlightUiElementsEnabled}"
                                  Toggled="HeadlightSwitch_OnToggled"/>
                
            </Grid>
        </Border>
        
        <Border Style="{StaticResource CommonBorderStyle}">
            <Grid Margin="5 0">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ComboBox x:Name="CleanlinessMode" 
                          Grid.Column="0"
                          VerticalAlignment="Center"
                          SelectedIndex="0"
                          mah:ControlsHelper.CornerRadius="{StaticResource ControlCornerRadius}"
                          Background="{DynamicResource MahApps.Brushes.AccentBase}"
                          BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                          IsEnabled="{Binding ViewModel.AreCleanlinessUiElementsEnabled}"
                          SelectionChanged="CleanlinessMode_OnSelectionChanged">

                    <ComboBox.Resources>
                        <Style x:Key="TextBlockStyle" 
                               TargetType="TextBlock">
                            <Setter Property="Margin" Value="2.5 0 0 0"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                    <Setter Property="Text" Value="{DynamicResource OnWithBrackets}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False">
                                    <Setter Property="Text" Value="{DynamicResource OffWithBrackets}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Resources>
                    
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{DynamicResource Dirt}" />
                            <TextBlock Tag="{Binding ViewModel.DirtEnabled, Mode=OneWay}" 
                                       Style="{StaticResource TextBlockStyle}" />
                        </StackPanel>
                    </ComboBoxItem>
                    
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{DynamicResource Mud}" />
                            <TextBlock Tag="{Binding ViewModel.MudEnabled, Mode=OneWay}" 
                                       Style="{StaticResource TextBlockStyle}" />
                        </StackPanel>
                    </ComboBoxItem>
                </ComboBox>
                    
                <Slider x:Name="CleanlinessSlider" 
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="5 0"
                        Minimum="0"
                        Maximum="1"
                        ValueChanged="CleanlinessSlider_OnValueChanged"
                        mah:SliderHelper.EnableMouseWheel="MouseHover"
                        AutoToolTipPlacement="{StaticResource SliderAutoToolTipPlacement}"
                        AutoToolTipPrecision="{StaticResource SliderTooltipPrecision}"
                        IsEnabled="{Binding ViewModel.AreCleanlinessUiElementsEnabled}"/>                
                
                <mah:ToggleSwitch x:Name="CleanlinessSwitch" 
                                  Grid.Column="2"
                                  VerticalAlignment="Center"
                                  MinWidth="0"
                                  FontSize="12"
                                  Content="{DynamicResource Cleanliness}"
                                  IsEnabled="{Binding ViewModel.AreCleanlinessUiElementsEnabled}"
                                  Toggled="CleanlinessSwitch_OnToggled"/>
                
            </Grid>
        </Border>
        <Border Style="{StaticResource CommonBorderStyle}">
            <Grid Margin="5 0">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Slider x:Name="LodSlider" 
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        mah:SliderHelper.EnableMouseWheel="MouseHover"
                        AutoToolTipPlacement="{StaticResource SliderAutoToolTipPlacement}"
                        IsSnapToTickEnabled="True"
                        TickPlacement="BottomRight"
                        Minimum="0"
                        Maximum="4"
                        IsEnabled="{Binding ViewModel.AreForceLodUiElementsEnabled}"
                        ValueChanged="LodSlider_OnValueChanged"/>                
                
                <mah:ToggleSwitch Grid.Column="1"
                                  VerticalAlignment="Center"
                                  Margin="5 0 0 0"
                                  MinWidth="0"
                                  FontSize="12"
                                  Content="{DynamicResource ForceLod}"
                                  IsEnabled="{Binding ViewModel.AreForceLodUiElementsEnabled}"
                                  Toggled="LodSwitch_OnToggled"/>
                
            </Grid>
        </Border>
        
        <Border Style="{StaticResource CommonBorderStyle}">
            <Grid Margin="5 0">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <mah:NumericUpDown x:Name="MinBackfire" 
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   TextAlignment="Left"
                                   mah:ControlsHelper.CornerRadius="{StaticResource ControlCornerRadius}"
                                   Background="{DynamicResource MahApps.Brushes.AccentBase}"
                                   BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                                   IsEnabled="{Binding ViewModel.AreBackfireUiElementsEnabled}"
                                   Minimum="0"
                                   Value="2500"
                                   ValueChanged="MinBackfire_OnValueChanged"/>
                
                <Label Grid.Column="1"
                       VerticalAlignment="Center"
                       Margin="5 0"
                       Content="{DynamicResource MinTime}"/>
                
                <mah:NumericUpDown x:Name="MaxBackfire" 
                                   Grid.Column="2"
                                   VerticalAlignment="Center"
                                   TextAlignment="Left"
                                   mah:ControlsHelper.CornerRadius="{StaticResource ControlCornerRadius}"
                                   Background="{DynamicResource MahApps.Brushes.AccentBase}"
                                   BorderBrush="{DynamicResource MahApps.Brushes.AccentBase}"
                                   IsEnabled="{Binding ViewModel.AreBackfireUiElementsEnabled}"
                                   Minimum="0"
                                   Value="5000"
                                   ValueChanged="MaxBackfire_OnValueChanged"/>
                
                <Label Grid.Column="3"
                       VerticalAlignment="Center"
                       Margin="5 0"
                       Content="{DynamicResource MaxTime}"/>
                
                <mah:ToggleSwitch Grid.Column="4"
                                  VerticalAlignment="Center"
                                  MinWidth="0"
                                  FontSize="12"
                                  Content="{DynamicResource BackfireTime}"
                                  IsEnabled="{Binding ViewModel.AreBackfireUiElementsEnabled}"
                                  Toggled="BackfireSwitch_OnToggled"/>
                
            </Grid>
        </Border>
    </StackPanel>
</Page>
