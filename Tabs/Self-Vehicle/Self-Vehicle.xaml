            <mah:MetroProgressBar x:Name="AOBProgressBar" HorizontalAlignment="Left" Height="10" Margin="54,19,0,0" VerticalAlignment="Top" Width="100"/>
            <Button x:Name="ScanButton" Content="Scan" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="ScanButton_Click" BorderBrush="#FF2E3440" Focusable="False" FontFamily="Manrope"/>
            <Rectangle HorizontalAlignment="Center" Height="100" Margin="0,422,0,0" Stroke="Black" VerticalAlignment="Top" Width="100" Fill="Red"/>
        </Grid>
    </ScrollViewer>
